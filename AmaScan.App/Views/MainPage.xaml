<uwpcControls:UniversalPage
    x:Class="AmaScan.App.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AmaScan.App"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:uwpcControls="using:UWPCore.Framework.Controls"
    xmlns:toolkit="using:Microsoft.Toolkit.Uwp.UI.Controls"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="1" EntranceNavigationTransitionInfo.IsTargetElement="True">
            <WebView uwpcControls:WebViewExtensions.UriSource="{Binding Uri}" DefaultBackgroundColor="{ThemeResource SystemControlBackgroundAccentBrush}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
        </Grid>

        <toolkit:DropShadowPanel ShadowOpacity="0.66">
            <uwpcControls:PageHeader Background="{ThemeResource SystemControlBackgroundAccentBrush}" Foreground="White">
                <uwpcControls:PageHeader.HeaderContent>
                    <TextBlock x:Uid="MainTitle" Text="HOME" Style="{ThemeResource PageTitleTextBlockStyle}" TextWrapping="NoWrap"/>
                </uwpcControls:PageHeader.HeaderContent>
            </uwpcControls:PageHeader>
        </toolkit:DropShadowPanel>

        <Button Grid.Row="1" VerticalAlignment="Bottom" HorizontalAlignment="Right" Height="80" Width="80" Margin="16"
                Command="{Binding ScanCommand}" Background="{ThemeResource SystemControlBackgroundAccentBrush}">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <toolkit:DropShadowPanel ShadowOpacity="0.66">
                            <Ellipse Fill="{ThemeResource SystemControlBackgroundAccentBrush}">
                            </Ellipse>
                        </toolkit:DropShadowPanel>
                        <ContentPresenter HorizontalAlignment="Center"
                                  VerticalAlignment="Center"/>
                    </Grid>
                </ControlTemplate>
            </Button.Template>
            <Path Width="28" Height="28" Stretch="Fill" Opacity="0.8" Fill="White" Data="F1 M 19,19L 20.1875,19L 20.1875,57L 19,57L 19,19 Z M 22.1666,19L 23.75,19L 23.75,57L 22.1666,57L 22.1666,19 Z M 25.3333,19L 28.5,19L 28.5,57L 25.3333,57L 25.3333,19 Z M 30.0833,19L 31.6666,19L 31.6666,57L 30.0833,57L 30.0833,19 Z M 33.25,19L 34.0416,19L 34.0416,57L 33.25,57L 33.25,19 Z M 38,19L 42.75,19L 42.75,57L 38,57L 38,19 Z M 44.3333,19L 45.9166,19L 45.9166,57L 44.3333,57L 44.3333,19 Z M 50.6667,19L 53.8333,19L 53.8333,57L 50.6667,57L 50.6667,19 Z M 55.4167,19L 57,19L 57,57L 55.4167,57L 55.4167,19 Z M 47.5,19L 48.2917,19L 48.2917,57L 47.5,57L 47.5,19 Z "/>
        </Button>

    </Grid>
</uwpcControls:UniversalPage>
