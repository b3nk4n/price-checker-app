                <!-- Give it a light color, because Transparent is BADLY clickable/touchable -->
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="16" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <TextBlock Text="{Binding Title}" />

            </Grid>
        </DataTemplate>
    </Page.Resources>

